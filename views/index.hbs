    {{#if tratamiento}}
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Editar Tramiento</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id="id" name="id" value="{{tratamiento.id}}" hidden>
                    <div class="mb-3">
                        <label for="user" class="from-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="{{tratamiento.nombre}}" tabindex="1">
                    </div>  
                    <div class="mb-3">
                        <label for="user" class="from-label">Descripcion</label>
                        <input type="text" class="form-control" id="Descipcion" name="Descripcion" value="{{tratamiento.Descripcion}}" tabindex="1">
                    </div> 
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/controltrat" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
{{/if}}

